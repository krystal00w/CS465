<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".AppActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/opensans_reg"
        android:text="Bar Check-In"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:id="@+id/imageQR"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/qr_code"  />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/opensans_reg"
        android:layout_marginBottom="30dp"
        android:text="Show this QR code to security along with your ID to open a tab. You can do this when you enter the bar."
        android:textSize="17sp"/>

    <Button
        style="@style/ButtonStyleRounded"
        android:id="@+id/checked"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:text="Next"
        android:fontFamily="@font/opensans_reg"
        android:textSize="19dp"
        android:background="@drawable/rounded_button_dark"
        />


</LinearLayout>